<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://static.vecteezy.com/system/resources/previews/003/158/117/non_2x/cinema-promo-banner-template-vector.jpg);">
  <div class="container">
    <h1> Save any kind of <strong>movies</strong>!</h1>
    <p>Start now, create your Lists</p>
    <%= link_to "Create a movie List" , new_list_path, class: "btn btn-flat"%>
  </div>
</div>



 <div class="m-5 d-flex justify-content-between">
  <h3 class="m-5 font-monospace flex-grow-1">My Lists</h3>
  <%= link_to "Create a movie List" , new_list_path, class: "btn btn-flat mt-5", style: "height:45px"%>
</div>

 </div>
<div class="container m-5">
  <div class="d-flex justify-content-evenly">
    <% @lists.each do |list|  %>
      <% if list.photo.attached? %>
        <div class="card-category m-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
          <%= link_to list.name , list_path(list), class: "text-decoration-none link-light"%>
        </div>
      <% else %>
        <div class="card-category m-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1512070679279-8988d32161be?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=738&q=80)">
          <%= link_to list.name , list_path(list), class: "text-decoration-none link-light"%>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
