<div class="banner_min" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dqwouraji/image/upload/v1685722734/retro-film-production-canva-photo.xc6cf828a_l5e4wb.png);">
  <div class="container">
    <h1>Add your <strong>bookmark</strong>!</h1>
  </div>
</div>

<div class="d-flex justify-content-end mt-3 mx-3">
<%= link_to "Back to List",list_path(@list), class: "btn btn-ghost" %>
</div>

<div class="container shadow p-3 m-5">
<h2 class="font-monospace my-2">Create a your Bookmark</h2>
 <br>
  <%= simple_form_for [@list, @bookmark] do |f| %>
   <br>
    <%= f.input :comment %>
     <br>
    <%= f.association :movie, prompt: "Select a Movie", input_html: { data: {controller: "tom-select"} } %>
     <br>
    <%= f.submit "Create Bookmark", class: "btn btn-flat" %>
  <% end %>
</div>
